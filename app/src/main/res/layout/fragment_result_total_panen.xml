<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg_secondary_900"
    tools:context=".fragments.ResultTotalPanen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Total Yield Prediction Result"
            android:textColor="@color/text_primary_500"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/bg_primary_400"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted Yield (Kg/Ha)"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_predicted_yield_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    tools:text="84,500.00" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Input Parameter Details"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_border"
            android:padding="8dp"
            android:stretchColumns="1">

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:text="Min Temperature (tmin)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_tmin"
                    android:gravity="end"
                    tools:text="2.0 °C" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:text="Max Temperature (tmax)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_tmax"
                    android:gravity="end"
                    tools:text="3.2 °C" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:text="Rainfall (prec)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_rainfall"
                    android:gravity="end"
                    tools:text="250 mm" />
            </TableRow>

            <TableRow android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area (ha)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_area"
                    android:gravity="end"
                    tools:text="5.5 Ha" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>