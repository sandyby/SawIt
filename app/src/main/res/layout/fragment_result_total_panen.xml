<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvest Forecast"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/text_primary_900"
            android:textSize="22sp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:background="@color/text_primary_900">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Yield"
                    android:textColor="@color/text_500"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato_regular" />

                <TextView
                    android:id="@+id/tv_predicted_yield_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:fontFamily="@font/lato_bold"
                    tools:text="84,500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kilograms / hectare"
                    android:textColor="@color/text_500"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parameters Used"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/text_primary_900"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_filled_edit_48_bg_primary_900" app:tint="@color/bg_primary_500"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Temperature Range" android:textColor="@color/text_500"/>
                    <TextView android:id="@+id/tv_detail_tmin" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="22째C" android:textColor="@color/text_900" android:fontFamily="@font/lato_bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" - " android:textColor="@color/text_500"/>
                    <TextView android:id="@+id/tv_detail_tmax" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="32째C" android:textColor="@color/text_900" android:fontFamily="@font/lato_bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="12dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_filled_lock_24_bg_primary_900" app:tint="@color/bg_primary_500"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Rainfall" android:textColor="@color/text_500"/>
                    <TextView android:id="@+id/tv_detail_rainfall" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="250 mm" android:textColor="@color/text_900" android:fontFamily="@font/lato_bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="12dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_filled_chart_area_spline_24_secondary_overlay" app:tint="@color/bg_primary_500"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:text="Total Area" android:textColor="@color/text_500"/>
                    <TextView android:id="@+id/tv_detail_area" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="5.5 Ha" android:textColor="@color/text_900" android:fontFamily="@font/lato_bold"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Finish Analysis"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/bg_primary_500"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

