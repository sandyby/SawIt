<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/view_status_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/bg_primary_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_prediction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/lato_bold"
            android:text="Harvest Prediction"
            android:textColor="@color/text_primary_900"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/view_status_indicator"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05 Dec 2025"
            android:textColor="@color/text_600"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_prediction_type" />

        <TextView
            android:id="@+id/tv_predicted_yield_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Estimated Yield"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            app:layout_constraintStart_toStartOf="@id/tv_prediction_type"
            app:layout_constraintTop_toBottomOf="@id/tv_prediction_type" />

        <TextView
            android:id="@+id/tv_predicted_yield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="85,200 kg"
            android:textColor="@color/text_primary_900"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv_prediction_type"
            app:layout_constraintTop_toBottomOf="@id/tv_predicted_yield_label" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_condition_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            app:layout_constraintBottom_toBottomOf="@id/tv_predicted_yield"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="GOOD"
                android:textColor="@color/bg_primary_500"
                android:textSize="11sp"
                android:fontFamily="@font/lato_bold" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>