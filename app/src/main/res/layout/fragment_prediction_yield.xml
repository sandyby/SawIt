<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900"
    android:padding="16dp"
    tools:context=".fragments.PredictionYieldFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Harvest Prediction"
            android:textColor="@color/text_primary_900"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_field_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:text="Field"
                android:textColor="@color/text_primary_900"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_field"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:errorEnabled="true"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/box_stroke_color_selector"
                app:boxStrokeErrorColor="@color/text_error_900"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/actv_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="@drawable/autocomplete_background"
                    android:hint="Choose a field"
                    android:inputType="none"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_primary_900" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_harvest_area_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Harvest Area"
                    android:textColor="@color/text_primary_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_harvest_area"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:errorEnabled="true"
                        app:boxStrokeColor="@color/box_stroke_color_selector"
                        app:boxStrokeErrorColor="@color/text_error_900"
                        app:cursorColor="@color/text_primary_900"
                        app:cursorErrorColor="@color/text_fiery_red_sunset_600"
                        app:helperText="Max: 5000 ha"
                        app:helperTextEnabled="true"
                        app:helperTextTextColor="@color/text_600"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_harvest_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="100.0"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusRight="@id/tiet_rainfall"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/text_primary_900"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tv_harvest_area_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="ha"
                        android:textColor="@color/text_primary_900"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rainfall_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Rainfall"
                    android:textColor="@color/text_primary_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_rainfall"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/box_stroke_color_selector"
                        app:boxStrokeErrorColor="@color/text_error_900"
                        app:cursorColor="@color/text_primary_900"
                        app:cursorErrorColor="@color/text_fiery_red_sunset_600"
                        app:helperText="Max: 1000 mm"
                        app:helperTextEnabled="true"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/text_600"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_rainfall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="120.0"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusDown="@id/tiet_min_temperature"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/text_primary_900"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tv_rainfall_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="mm"
                        android:textColor="@color/text_primary_900"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_min_temperature_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Min. Temperature"
                    android:textColor="@color/text_primary_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_min_temperature"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/box_stroke_color_selector"
                        app:boxStrokeErrorColor="@color/text_error_900"
                        app:cursorColor="@color/text_primary_900"
                        app:cursorErrorColor="@color/text_fiery_red_sunset_600"
                        app:helperText="10°C - 40°C"
                        app:helperTextEnabled="true"
                        app:errorEnabled="true"
                        app:helperTextTextColor="@color/text_600"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_min_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="22"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusRight="@id/tiet_max_temperature"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/text_primary_900"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_min_temperature_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="°C"
                        android:textColor="@color/text_primary_900"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_max_temperature_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Max. Temperature"
                    android:textColor="@color/text_primary_900"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_max_temperature"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/box_stroke_color_selector"
                        app:boxStrokeErrorColor="@color/text_error_900"
                        app:cursorColor="@color/text_primary_900"
                        app:cursorErrorColor="@color/text_fiery_red_sunset_600"
                        app:errorEnabled="true"
                        app:helperText="10°C - 40°C"
                        app:helperTextEnabled="true"
                        app:helperTextTextColor="@color/text_600"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_max_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="34"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/text_primary_900"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_max_temperature_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="°C"
                        android:textColor="@color/text_primary_900"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_predict"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg_primary_500"
            android:fontFamily="@font/lato_bold"
            android:paddingVertical="12dp"
            android:text="PREDICT"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
