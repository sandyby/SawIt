<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary_900"
    android:padding="12dp"
    tools:context=".fragments.PredictFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Condition Prediction"
            android:textColor="@color/text_primary_900"
            android:textStyle="bold"
            android:textSize="22sp" />

        <!-- FIELD PICKER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field"
            android:textColor="@color/text_primary_900"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/input_lahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose field"
                android:textColor="@color/text_primary_900"
                android:textColorHint="@color/text_500"
                android:padding="12dp"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- HARVEST AREA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harvest Area (Ha)"
            android:textColor="@color/text_primary_900"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLuasField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total harvested area (Ha)"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary_900"
                android:padding="12dp"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- RAINFALL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rainfall (mm)"
            android:textColor="@color/text_primary_900"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurahHujan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="55"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary_900"
                android:padding="12dp"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Total Harvest (Asli) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Harvest"
            android:textColor="@color/text_primary_900"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHasilPanen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="120"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary_900"
                android:padding="12dp"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- TEMPERATURE INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="12dp">

            <!-- TMIN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Temperature (°C)"
                    android:textColor="@color/text_primary_900"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="23.2"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary_900"
                        android:padding="12dp"
                        android:textSize="13sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- TMAX -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Temperature (°C)"
                    android:textColor="@color/text_primary_900"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTmax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="34.7"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary_900"
                        android:padding="12dp"
                        android:textSize="13sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_predict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PREDICT"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/bg_primary_500" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
