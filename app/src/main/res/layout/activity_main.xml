<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@color/bg_secondary_900"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/fl_top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/abb_bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/fl_top_header" />

    <View
        android:id="@+id/cpi_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary_500"
        android:visibility="gone" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpi_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/abb_bottom_bar"
        style="@style/BottomNavBarText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_primary_500"
        app:abb_iconSize="32dp"
        app:abb_indicatorAppearance="round"
        app:abb_indicatorColor="@color/text_primary_900"
        app:abb_indicatorHeight="8dp"
        app:abb_indicatorMargin="8dp"
        app:abb_rippleColor="@color/text_200"
        app:abb_rippleEnabled="true"
        app:abb_selectedIndex="0"
        app:abb_selectedTabType="text"
        app:abb_tabAnimation="slide"
        app:abb_tabAnimationSelected="slide"
        app:abb_tabColor="@color/text_primary_900"
        app:abb_tabColorSelected="@color/white"
        app:abb_tabs="@menu/menu_bottomnav"
        app:abb_textSize="16sp"
        app:abb_textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>