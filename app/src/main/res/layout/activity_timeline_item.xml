<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:lineStyle="dash"
        app:lineWidth="2dp"
        app:marker="@drawable/timeline_marker_ring_upcoming"
        app:markerSize="20dp" />

    <TextView
        android:id="@+id/tv_activity_date"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/lato_bold"
        android:text="27/10/2025"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_activity_card"
        style="@style/CustomActivitiesCardItemViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:cardElevation="2dp"
        android:layout_weight="1"
        android:background="@color/text_primary_900"
        android:backgroundTint="@color/text_primary_900">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/tv_activity_timeline_field_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_italic"
                    android:maxLines="1"
                    android:text="Lahan Manjur Sukses"
                    android:textColor="@color/text_100"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_activity_timeline_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="1"
                    android:text="Watering Crops"
                    android:textColor="@color/bg_secondary_900"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_timeline_field_name" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/iv_activity_view_more_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_filled_chevron_right_36_white" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>