<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SawIt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/bg_secondary_900</item>
    </style>

    <style name="Theme.SawIt" parent="Base.Theme.SawIt" />

    <style name="CustomFormCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/form_card_custom_corners</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomWeatherCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/weather_card_custom_corners</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomActivitiesCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/activity_card_custom_corners</item>
        <item name="strokeColor">@color/bg_primary_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomActivitiesCardItemViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/activity_card_item_custom_corners</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomFieldsCardItemViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/activity_card_item_custom_corners</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CustomTopHeaderCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/top_header_card_custom_corners</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CustomOutlinedInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
        <item name="boxStrokeErrorColor">@color/text_error_900</item>
        <item name="android:textColorHint">@color/text_primary_900</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="CustomOutlinedDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
        <item name="boxStrokeErrorColor">@color/text_error_900</item>
        <item name="android:textColorHint">@color/text_primary_900</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/bg_primary_500</item>

        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/bg_primary_500</item>

        <item name="buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bg_primary_500</item>
    </style>


    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>

        <item name="android:textColorPrimary">@color/text_primary_900</item>

        <item name="colorPrimary">@color/bg_primary_500</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeDialogButtonStyle</item>
    </style>

    <style name="NegativeDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_700</item>
    </style>

    <style name="DeleteDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:textColorPrimary">@color/text_primary_900</item>
        <item name="android:textColorSecondary">@color/text_900</item>
        <item name="colorSurface">@color/bg_secondary_900</item>
    </style>

    <style name="MapSearchTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:editTextColor">@color/text_primary_900</item>
        <item name="android:textColorHint">@color/text_500</item>
        <item name="android:textSize">16sp</item>
        <item name="tint">@color/bg_primary_500</item>
    </style>

    <style name="form_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="weather_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="activity_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="activity_card_item_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="top_header_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="button_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/bg_primary_500</item>
        <item name="windowSplashScreenBackground">@color/bg_primary_500</item>
        <item name="postSplashScreenTheme">@style/Theme.SawIt</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/sawit_logo_cropped_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
    </style>

